<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewGecmisAktivitelerDetaylari"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cardViewTextEgzersizIsmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egzersiz: Koşu"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardViewTextEgzersizSuresi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Süre: 30 dk"
                android:textColor="#555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cardViewTextHarcananKalori"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kalori: 250 kcal"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cardViewEgzersizTarihSaat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tarih: 2025-05-04 15:30"
                android:textColor="#777777"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/gecmisEgzersizSil_image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:contentDescription="Sil"
                android:padding="4dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
